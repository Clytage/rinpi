{
    "compilerOptions": {
        "target": "ES2021",
        "module": "UMD",
        "moduleResolution": "node",
        "lib": ["ES2021"],
        "strict": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "typeRoots": ["node_modules/@types", "src/typings"]
    },
    "exclude": [],
    "include": ["src/**/*"]
}
